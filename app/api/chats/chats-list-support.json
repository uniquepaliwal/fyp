{
  "meta": {
    "$_GET": [
      {
        "type": "text",
        "name": "sort"
      },
      {
        "type": "text",
        "name": "dir"
      },
      {
        "type": "text",
        "name": "search"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "checkLogin",
        "module": "core",
        "action": "exec",
        "options": {
          "exec": "check-access"
        },
        "output": false
      },
      {
        "name": "cChatListSupport",
        "module": "dbupdater",
        "action": "custom",
        "options": {
          "connection": "db",
          "sql": {
            "query": "SELECT \n    mcr.chat_room_id, \n    mcr.name AS chat_name, \n    mu2.first_name || ' ' || mu2.last_name AS end_user_name, \n    MAX(tm.created_on) AS last_message_time,\n    COUNT(tm.message_id) FILTER (WHERE tms.seen_at IS NULL ) AS unseen_message_count\nFROM app.m_chat_room mcr\nLEFT JOIN app.p_chat_participant pcp ON mcr.chat_room_id = pcp.chat_room_id \nLEFT JOIN app.m_user mu ON pcp.user_id = mu.user_id \nLEFT JOIN app.p_chat_participant pcp2 ON pcp2.chat_room_id = mcr.chat_room_id \nLEFT JOIN app.m_user mu2 ON pcp2.user_id = mu2.user_id \nLEFT JOIN app.t_message tm ON tm.chat_room_id = mcr.chat_room_id\nLEFT JOIN app.t_message_seen tms ON tms.message_id = tm.message_id\nWHERE mu.role_id = 1 \n  AND mu.user_id = :P1 \n  AND mu2.user_id != :P1\n  AND mcr.not_waiting = true\n  AND pcp.is_active_memeber = true\n  AND mu2.role_id = 2\n  AND LOWER(mu2.first_name) Like concat(:P2::text,'%')\nGROUP BY mcr.chat_room_id, mcr.name, mu2.first_name, mu2.last_name\nORDER by last_message_time desc;",
            "params": [
              {
                "name": ":P1",
                "value": "{{identity}}",
                "test": "19fbe4f8-7732-4953-a388-a08806e15ffa"
              },
              {
                "name": ":P2",
                "value": "{{$_GET.search.lowercase().default('')}}",
                "test": "a"
              }
            ]
          }
        },
        "output": false,
        "meta": [
          {
            "name": "chat_room_id",
            "type": "text"
          },
          {
            "name": "chat_name",
            "type": "text"
          },
          {
            "name": "end_user_name",
            "type": "text"
          },
          {
            "name": "last_message_time",
            "type": "datetime"
          },
          {
            "name": "unseen_message_count",
            "type": "number"
          }
        ]
      },
      {
        "name": "chatArray",
        "module": "arraylist",
        "action": "create",
        "options": {},
        "meta": [],
        "outputType": "array"
      },
      {
        "name": "repeat",
        "module": "core",
        "action": "repeat",
        "options": {
          "repeat": "{{cChatListSupport}}",
          "outputFields": [],
          "exec": {
            "steps": [
              {
                "name": "singleChat",
                "module": "core",
                "action": "setvalue",
                "options": {
                  "key": "singleChat",
                  "value": {
                    "chat_room_id": "{{chat_room_id}}",
                    "chat_name": "{{chat_name}}",
                    "end_user_name": "{{end_user_name}}",
                    "message_time": "{{last_message_time}}",
                    "unseen_messages": "{{unseen_message_count}}"
                  }
                },
                "meta": [],
                "outputType": "object"
              },
              {
                "name": "",
                "module": "arraylist",
                "action": "add",
                "options": {
                  "ref": "chatArray",
                  "value": "{{singleChat}}"
                }
              }
            ]
          }
        },
        "output": false,
        "meta": [
          {
            "name": "$index",
            "type": "number"
          },
          {
            "name": "$number",
            "type": "number"
          },
          {
            "name": "$name",
            "type": "text"
          },
          {
            "name": "$value",
            "type": "object"
          },
          {
            "name": "chat_room_id",
            "type": "text"
          },
          {
            "name": "chat_name",
            "type": "text"
          },
          {
            "name": "end_user_name",
            "type": "text"
          },
          {
            "name": "last_message_time",
            "type": "datetime"
          },
          {
            "name": "unseen_message_count",
            "type": "number"
          }
        ],
        "outputType": "array"
      },
      {
        "name": "finalChatList",
        "module": "arraylist",
        "action": "value",
        "options": {
          "ref": "chatArray"
        },
        "output": true,
        "meta": [],
        "outputType": "array"
      }
    ]
  }
}