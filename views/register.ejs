<!-- Wappler include head-page="layouts/access" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="register" appConnect="local" components="{dmxBootstrap5Navigation:{}}" -->
<meta name="ac:route" content="/register">

<div class="d-flex flex-column p-2">
    <h1>Create Your Account</h1>

    <div class="card">
        <div class="card-body p-4">
            <form id="signup" is="dmx-serverconnect-form" method="post" action="/api/users/signup-enduser" dmx-on:success="browser_access.goto('/bot')" dmx-on:unauthorized="notifies_access.danger('UnAuthorized!')" dmx-on:error="notifies_access.danger('Something went wrong!')">
                <div class="mb-3">
                    <label class="form-label fs-6">Email address</label>
                    <input type="email" class="form-control" name="email" required>
                </div>
                <div class="mb-3">
                    <label class="form-label fs-6">Password</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="mb-3">
                    <label class="form-label fs-6">First Name</label>
                    <input type="text" class="form-control" name="firstName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label fs-6">Last Name</label>
                    <input type="text" class="form-control" name="lastName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label fs-6">Company Code</label>
                    <input type="text" class="form-control" name="company_code">
                </div>
                <button type="submit" class="btn btn-primary text-uppercase py-2 fs-5 w-100 mt-2">Create Account</button>
            </form>
            <div class="text-center mt-3">
                Already registered? - <a href="/login" title="#" class="text-primary text-decoration-underline">Login In</a>
            </div>
        </div>
    </div>

</div>